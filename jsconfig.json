{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "react",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "baseUrl": ".",
    "paths": {
      "@features/*": ["src/features/*"],
      "@routes": ["src/routes"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
